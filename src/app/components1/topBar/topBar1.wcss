.refreshBtn{
    width: 48px;
    height: 48px;
    margin: 40px 5px 0;
    border: 24px solid transparent;
    position: absolute;
    top: 0;
    right: 0;
}
.topBar{
    position: absolute;
    width: 100%;
    height: 128px;
    padding: 40px 5px 0;   
    top:0;
    display: flex;
    align-items: center;
}
.userHead{
    border: 2px solid #ffffff;  
    margin: 20px;
}
.total-asset{
    font-size: 32px;
    color: #fff;
}
.offline{
    height: 40px;
    line-height: 40px;
    margin-left: 20px;
    opacity: 0.8;
    padding: 0 15px;
    font-size: 24px;
    color: #fff;
    border-radius: 6px;
    background-color: rgba(34, 34, 34, 1);
    display: inline-block;
}