.base{
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    text-align: center;
}

.main{
    display: inline-block;
    width: 570px;
    min-height: 315px;
    vertical-align: middle;
    background-color: rgb(255, 255, 255);
    border-radius: 4px;
    border: 1px solid rgb(235, 238, 245);
    font-size: 18px;
    box-shadow: rgba(0, 0, 0, 0.1) 0px 2px 12px 0px;
    text-align: left;
    overflow: hidden;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    padding:40px 30px 30px;
    box-sizing: border-box;
}


.title{
    font-size: 40px;
    line-height: 1.5;
    color: #111111;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 0 10px;
}

.content{
    color: rgb(96, 98, 102);
    font-size: 28px;
    line-height: 1.5;
    margin: 40px 10px 0;
}
.extra{
    color: #8E96AB;
    font-size: 28px;
    line-height: 1.5;
    margin: 30px 10px 0;
    word-break: break-all;
}
.message{
    margin: 0;
    word-break: break-word;
}


.copy-btn{
    width: 100%;
    height: 100px;
    border-radius: 6px;
    background-color: rgba(53, 116, 250, 1);
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    font-size: 32px;
    margin-top: 30px;
}