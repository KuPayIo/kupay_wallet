.pi-input-simple{
    position: relative;
    display: inline-block;
    width: 100%;
    height: 100%;
    
}
.pi-input-simple__inner{
    -webkit-appearance: none;
    background-color: #fff;
    background-image: none;
    border: none;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    display: inline-block;
    height: 100%;
    line-height: 1.5;
    outline: none;
    width: 100%;
    font-size: 28px;
    color: #203260;
}
