.switch_bg{
    margin: 0;
    display: inline-block;
    position: relative;
    width: 98px;
    height: 58px;
    border: 1px solid #dcdfe6;
    outline: none;
    border-radius: 29px;
    box-sizing: border-box;
    background: #dcdfe6;
    cursor: pointer;
    transition: border-color .3s,background-color .3s;
    vertical-align: middle;  
}