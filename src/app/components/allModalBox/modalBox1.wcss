.new-page{
    background-color: rgba(0, 0, 0, .6);
    display: flex;
    justify-content: center;
    align-items: center;
}
.main{
    width: 629px;
    height: auto;
    border-radius: 12px;
    background-color: #fff;
    border: 1px solid rgba(151, 151, 151, 1);
    padding: 30px 40px;
    box-sizing: border-box;
    color: #111;
    display: flex;
    flex-direction: column;
}
.head{
    display: flex;
    justify-content: space-between;
    line-height: 80px;
    font-size: 40px;
}
.cancel{
    width: 50px;
    height: 50px;
    border: 15px solid transparent;
}
.content{
    line-height: 40px;
    font-size: 28px;
    margin: 20px 0 30px;
    flex: 1 0 0;
}
.tips{
    line-height: 40px;
    color: rgba(241, 120, 53, 1);
    font-size: 28px;
}