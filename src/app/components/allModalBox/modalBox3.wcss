.modal-mask{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 0 60px;
    background-color: rgba(50, 50, 50, 0.5);
}
.animate-container{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.body{
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 12px;
    position:relative;
}
.tip-title{
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size:64px;
    font-family:"PingFangSC-Regular";
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height:90px;
}
.tip-content{
    font-size:28px;
    font-family:"PingFangSC-Regular";
    font-weight:400;
    color:rgba(34,34,34,1);
    line-height:40px;
    white-space: pre;
    margin: 36px auto 0;
    text-align: center;
}
.closeBtn{
    margin-top:60px;
    width:70px;
    height:70px;
    border-radius:50%;
    border:2px solid white;
    display: flex;
    justify-content: center;
    align-items: center;
}
.btns{
    background:#fff;
    width: 100%;
    height: 300px;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.btn1{
    width:500px;
    height:80px;
    background:#FCDC3C;
    border-radius:40px;
    font-size:32px;
    color:#222222;
    line-height:80px;
    text-align: center;  
    margin: 40px 0 30px;
}
.btn2{
    width:500px;
    height:80px;
    background:#CCCCCC;
    border-radius:40px;
    font-size:32px;
    color:#222222;
    line-height:80px;
    text-align: center;  
}