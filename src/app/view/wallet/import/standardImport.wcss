.new-page{
    padding: 30px 20px 20px;
    display: flex;
    flex-direction: column;
}
.bottom-box{
    margin-top: 30px;
    background-color: #fff;
    border-radius: 12px;
    box-shadow: 0px 0px 2px 0px rgba(0, 0, 0, 0.2);
    position: relative;
    padding: 20px 20px 35px;
    flex: 1 0 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.textarea-father{
    position: relative;
    height: 410px;
    border: 1px solid #888;
    border-radius: 2px;
}